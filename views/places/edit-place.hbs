<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit {{name}} â™¡</h1>
            <hr>
            <form method="POST" action="/places/edit/{{id}}">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" name="name" type="text" value="{{name}}">

                </div>
                <br>
                <div class="form-group">
                    <label for="type">Type (coffee-shop or bookstore?)</label>
                    <input class="form-control" name="type" type="text" value="{{type}}">

                </div>
                <br>
                <div class="form-group">
                    <label for="lat">Latitude</label>
                    <input class="form-control" name="lat" type="text" value="{{location.coordinates.[0]}}">
                    

                </div>
                <br>
                <div class="form-group">
                    <label for="lng">Longitude </label>
                    <input class="form-control" name="lng" type="text" value="{{location.coordinates.[1]}}">
                </div>
                <br>
                <input class="btn btn-light btn-block" type="submit" value="Edit Place">

            </form>
        </div>
    </div>
</div>